{
  "name": "rdwyer-ha-client",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "prepare": "husky",
    "build-server": "npm run build --workspace=rdwyer-ha-client-server",
    "build-webclient": "npm run build --workspace=rdwyer-ha-client-web-client",
    "build-cli": "cmd.exe /C dotnet build C:/Users/Ryan-PC/Projects/rdwyer-ha-client/packages/os/os.sln /property:GenerateFullPaths=true /consoleloggerparameters:NoSummary /p:Configuration=Release /p:Platform=\"Any CPU\"",
    "build": "npx run-p build-server build-webclient build-cli",
    "start-server": "npm start --workspace=rdwyer-ha-client-server",
    "start-webclient": "npm start --workspace=rdwyer-ha-client-web-client",
    "start": "npx run-p start-server start-webclient",
    "dev-server": "npm run dev --workspace=rdwyer-ha-client-server",
    "dev-webclient": "npm run dev --workspace=rdwyer-ha-client-web-client",
    "dev": "npx run-p dev-server dev-webclient"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ToxicBananaParty/rdwyer-ha-client.git"
  },
  "author": "Ryan Dwyer",
